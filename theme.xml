<theme>
<formatVersion>7</formatVersion>

  	<variables>
		<controllerSubsetName>Show controllers in system view</controllerSubsetName>
	</variables>
	
	<subset name="controller" displayName="${controllerSubsetName}">
        <include name="on" displayName="${on}"/>
        <include name="off" displayName="${off}">./_art/settings/controllers.xml</include>
    </subset>

<view name="system">
    <image name="background" extra="true">
        <path>./_art/var/dot.png</path>
        <tile>false</tile>
        <size>1 1</size>
        <pos>0 0</pos>
        <origin>0 0</origin>
    </image>

      <sound name="bgsound">
	     <!-- try mp3 -->
         <path>./_art/assets/sounds/${system.theme}.mp3</path>
         <!-- try ogg -->
         <path>./_art/assets/sounds/${system.theme}.ogg</path>

      </sound>
      
    <image name="poster" extra="true">
        <path>./_art/posters/${system.theme}.jpg</path>
        <path>./_art/posters/${system.theme}.png</path>
        <tile>false</tile>
        <origin>1 0</origin>
        <pos>1 0</pos>
        <size>0 1</size>
    </image>

    <carousel name="systemcarousel">
        <type>vertical</type>
        <color>00000000</color>
        <origin>1 1</origin>
        <pos>1 1</pos>
        <size>0.01 0.01</size>
        <logoScale>1</logoScale>
        <logoSize>0.01 0.01</logoSize>
        <maxLogoCount>0</maxLogoCount>
    </carousel>
    
    <text name="sys_line1" extra="true">
        <fontPath>./_art/Bison-Bold.ttf</fontPath>
        <alignment>left</alignment>
        <forceUppercase>1</forceUppercase>
        <color>FFFFFF</color>
		<fontSize>0.050</fontSize>
        <origin>0 0</origin>
        <pos>0.003 0.132</pos>
        <size>0 0</size>
    </text>
    
    <text name="sys_line2" extra="true">
        <fontPath>./_art/Bison-Bold.ttf</fontPath>
        <alignment>left</alignment>
        <forceUppercase>1</forceUppercase>
		<fontSize>0.20</fontSize>
        <origin>0 0</origin>
        <pos>0.003 0.150</pos>
        <size>0 0</size>
        <color>FFFFFF</color>
    </text>

    <image name="buttonA" extra="true">
		<path>./_art/var/button.svg</path>
        <tile>false</tile>
        <origin>0 0</origin>
        <pos>0.003 0.48</pos>
        <size>0 0.085</size>
	<color>585858</color>
    </image>

    <text name="shortdescription" extra="true">
        <fontPath>./_art/Acre.otf</fontPath>
        <alignment>left</alignment>
        <forceUppercase>0</forceUppercase>
        <fontSize>0.022</fontSize>
        <color>ffffff</color>
        <origin>0 0</origin>
        <pos>0.003 0.092</pos>
        <size>0.320 0.025</size>
    </text>

    <text name="systemInfo">
        <fontPath>./_art/Bison-Bold.ttf</fontPath>
        <alignment>left</alignment>
        <backgroundColor>00000000</backgroundColor>
        <forceUppercase>1</forceUppercase>
        <color>912293</color>
        <origin>0 0</origin>
        <pos>0.003 0.62</pos>
        <size>0.400 0.042</size>
        <fontSize>0.050</fontSize>
    </text>
    
    <text name="longdescription" extra="true">
        <fontPath>./_art/Acre.otf</fontPath>
        <alignment>left</alignment>
        <forceUppercase>0</forceUppercase>
        <fontSize>0.022</fontSize>
        <color>ffffff</color>
 	<lineSpacing>1.18</lineSpacing>
        <origin>0 0</origin>
        <pos>0.003 0.72</pos>
        <size>0.28 0.24</size>
    </text>

    <image name="controller" extra="true">
        <path>./_art/controllers/${system.theme}.png</path>
        <tile>false</tile>
        <origin>0 0</origin>
        <pos>0.35 0.65</pos>
        <maxSize>0.33 0.33</maxSize>
    </image>
</view>

<view name="basic, detailed, video">

    <image name="background" extra="true">
        <tile>false</tile>
        <path>./_art/ingame-global-bg.png</path>
        <size>1 1</size>
        <pos>0 0</pos>
    </image>

    <textlist name="gamelist">
        <selectorColor>1c1c1c</selectorColor>
        <selectedColor>912293</selectedColor>
        <selectorHeight>0.05</selectorHeight>
        <primaryColor>585858</primaryColor>
        <secondaryColor>888888</secondaryColor>
        <fontPath>./_art/Acre.otf</fontPath>
        <alignment>left</alignment>
        <pos>0 0.12</pos>
	    <size>0.319 0.82</size>
        <fontSize>0.03</fontSize>
        <lineSpacing>1.683</lineSpacing>
        <horizontalMargin>0.01</horizontalMargin>
    </textlist>
	
	<helpsystem name="help">
        <pos>1.158 1</pos>
	    <origin>1 1</origin>
        <textColor>ffffff</textColor>
        <iconColor>ffffff</iconColor>
    </helpsystem>
    
    <text name="top_label" extra="true">
        <fontPath>./_art/Bison-Bold.ttf</fontPath>
        <text></text>
        <alignment>left</alignment>
        <color>F8F8F8</color>
        <fontSize>0.039</fontSize>
        <origin>0 0</origin>
        <pos>0.01 0.01</pos>
        <size>0.20 0.08</size>
    </text>
<!-- Console Name --> 


    <text name="nameLabel" extra="true">
        <fontPath>./_art/Bison-Bold.ttf</fontPath>
        <alignment>right</alignment>
        <forceUppercase>1</forceUppercase>
        <color>912293</color>
        <fontSize>0.060</fontSize>
        <origin>0 0</origin>
        <pos>0.1 0.02</pos>
        <size>0.65 0.08</size>
        <zIndex>32</zIndex>
    </text>

